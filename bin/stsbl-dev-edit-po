#!/bin/sh

PKG="$1"

if [ -z "$PKG" ]
then
  PKG="$(basename "$PWD")"
fi

NAME="$(echo "$PKG" | sed 's/^stsbl-iserv3-//;s/^stsbl-iserv-//')"

if [ -z "$PKG" ] || [ -z "$NAME" ] || [ "$1" = "--help" ]
then
  echo "Usage: $0 [package]" 1>&2
  exit 1
fi

if [ -f "locale/$NAME.po" ]
then
  genpo2 .
  vim -p "locale/$NAME.po"
  genpo2 .
elif [ -f "locale/${NAME}3.po" ]
then
  genpo2 .
  vim -p "locale/${NAME}3.po"
  genpo2 .
else
  echo "Invalid package name!" 1>&2
fi
